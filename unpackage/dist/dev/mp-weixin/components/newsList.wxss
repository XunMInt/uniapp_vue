.news .news-item {
  position: relative;
  padding: 10rpx 20rpx 0rpx 20rpx;
  border-bottom: 1px solid #b50e02;
}
.news .news-item image {
  width: 200rpx;
  height: 150rpx;
}
.news .news-item .news-right {
  width: 500rpx;
  float: right;
}
.news .news-item .news-right .news-title {
  font-size: 30rpx;
}
.news .news-item .news-right .news-bottom {
  position: absolute;
  bottom: 10rpx;
  font-size: 24rpx;
}
.news .news-item .news-right .news-bottom .news-time {
  margin-right: 30rpx;
}

