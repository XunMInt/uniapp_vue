<view class="body"><scroll-view class="left" scroll-y="{{true}}"><block wx:for="{{cateList}}" wx:for-item="item" wx:for-index="index" wx:key="id"><view data-event-opts="{{[['tap',[['switchTab',[index,'$0'],[[['cateList','id',item.id,'id']]]]]]]}}" class="{{[isAction==index?'action':'']}}" bindtap="__e">{{item.title}}</view></block></scroll-view><scroll-view class="right" scroll-y="{{true}}"><block wx:for="{{contentList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view><image src="{{item.img_url}}" mode="widthFix" data-event-opts="{{[['tap',[['previewImage',['$0'],[[['contentList','',index,'img_url']]]]]]]}}" bindtap="__e"></image><view class="text">{{item.title}}</view></view></block><block wx:if="{{contentList.length===0}}"><view>暂无数据</view></block></scroll-view></view>