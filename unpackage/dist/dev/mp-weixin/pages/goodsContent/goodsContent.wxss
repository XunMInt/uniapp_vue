uni-page-body,
.body {
  height: 100%;
}
.swiper {
  width: 750rpx;
  height: 700rpx;
}
.swiper image {
  width: 100%;
  height: 100%;
}
.goods .price {
  padding: 0 20rpx;
}
.goods .price text:nth-child(1) {
  font-size: 34rpx;
  color: #b50e03;
  line-height: 80rpx;
  margin-right: 20rpx;
}
.goods .price text:nth-child(2) {
  font-size: 28rpx;
  color: #ccc;
}
.goods .name {
  padding: 0rpx 20rpx;
  padding-bottom: 20rpx;
  font-size: 32rpx;
  line-height: 60rpx;
  border-bottom: 5px solid #eee;
}
.goods .modle {
  padding: 0 20rpx;
  font-size: 32rpx;
  line-height: 70rpx;
  border-bottom: 5px solid #eee;
}
.goods .title {
  padding: 0 20rpx;
  font-size: 32rpx;
  line-height: 70rpx;
  border-bottom: 1px solid #eee;
}
.goods .content {
  font-size: 28rpx;
  color: #333;
  line-height: 50rpx;
}

